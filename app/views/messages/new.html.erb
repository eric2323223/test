<h1>New message</h1>

<%= error_messages_for :message %>

<% form_for(@message) do |f| %>
  <p>
    <b>Content</b><br />
    <%= f.text_area :content %>
  </p>

  <p>
    <b>Sender</b><br />
    <%= f.text_field :sender_id %>
  </p>

  <p>
    <b>Receiver</b><br />
    <%= f.text_field :receiver_id %>
  </p>

  <p>
    <b>Read</b><br />
    <%= f.check_box :read %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', messages_path %>
